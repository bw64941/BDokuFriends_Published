<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ironbrand.bdoku.friends"
    android:versionCode="5"
    android:versionName="2.5" >

    <uses-sdk android:minSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/applicationName" >
        <activity
            android:name="com.ironbrand.controller.BoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sudoku.Board" >
        </activity>
        <activity
            android:name="com.ironbrand.controller.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sudoku.Dialog" >
        </activity>
        <activity
            android:name="com.ironbrand.controller.ResumeBoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sudoku.Dialog" >
        </activity>
        <activity
            android:name="com.ironbrand.controller.DifficultyChooserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sudoku.Dialog" >
        </activity>
        <activity
            android:name="com.ironbrand.controller.RestartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sudoku.Dialog" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/applicationName"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.ironbrand.controller.AndokuActivity"
            android:theme="@style/Theme.Sudoku.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
,
    </application>

</manifest>