    <ToggleButton
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/application_button"
        android:gravity="center" 
        android:textSize="10dip"/>

</LinearLayout>